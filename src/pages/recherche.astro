---
import Layout from '../layouts/Layout.astro';
import Search from "astro-pagefind/components/Search";
---

<Layout>
  <section class="py-12">
    <h1 class="text-4xl font-bold mb-8 italic tracking-tighter" style="color: var(--text-title);">
      Rechercher dans les projets
    </h1>
    
    <div class="search-page-container">
      <Search 
        id="search" 
        className="pagefind-custom-full"
        uiOptions={{ 
          placeholder: "Tapez un mot-clé (ex: Active Directory, GPO, PfSense...)", 
          showImages: false 
        }} 
      />
    </div>
  </section>
</Layout>

<style is:global>
  /* --- Style adaptatif pour Pagefind --- */
  
  .pagefind-custom-full {
    --pagefind-ui-primary: #a855f7; /* Violet pour les focus */
    --pagefind-ui-text: var(--text-main);
    --pagefind-ui-background: transparent;
    --pagefind-ui-border: var(--card-border);
  }

  /* L'input de recherche s'adapte au thème */
  .pagefind-custom-full .pagefind-ui__search-input {
    background-color: var(--card-bg) !important;
    border: 1px solid var(--card-border) !important;
    padding: 15px 15px 15px 50px !important;
    border-radius: 12px !important;
    color: var(--text-title) !important;
    transition: all 0.3s ease !important;
  }

  .pagefind-custom-full .pagefind-ui__search-input:focus {
    border-color: #facc15 !important; /* Bordure jaune au focus */
    box-shadow: 0 0 0 2px rgba(250, 204, 21, 0.1) !important;
  }

  /* Affichage en liste fixe */
  .pagefind-custom-full .pagefind-ui__drawer {
    position: static !important;
    display: block !important;
    width: 100% !important;
    border: none !important;
    background: transparent !important;
    box-shadow: none !important;
    margin-top: 2rem !important;
  }

  /* Le fameux surlignage JAUNE des mots trouvés */
  mark {
    background-color: rgba(250, 204, 21, 0.3) !important; /* Plus opaque pour le mode clair */
    color: #854d0e !important; /* Texte marron foncé pour lisibilité sur jaune en mode clair */
    padding: 0 2px;
    border-radius: 2px;
    font-weight: bold;
  }

  /* En mode sombre, on garde le jaune flashy */
  [data-theme='dark'] mark {
    color: #facc15 !important;
    background-color: rgba(250, 204, 21, 0.2) !important;
  }

  /* Cartes de résultats adaptatives */
  .pagefind-ui__result {
    background: var(--card-bg) !important;
    border: 1px solid var(--card-border) !important;
    padding: 1.5rem !important;
    border-radius: 12px !important;
    margin-bottom: 1rem !important;
    transition: all 0.2s ease !important;
  }

  .pagefind-ui__result:hover {
    transform: translateX(5px);
    border-color: #facc15 !important; /* Rappel du jaune au survol */
  }

  /* Liens des titres de résultats */
  .pagefind-ui__result-link {
    color: var(--text-title) !important;
    font-size: 1.25rem !important;
    text-decoration: none !important;
    font-weight: 700 !important;
  }

  .pagefind-ui__result-link:hover {
    color: #a855f7 !important; /* Devient violet au survol */
  }

  /* Texte de description sous le titre */
  .pagefind-ui__result-excerpt {
    color: var(--text-main) !important;
    margin-top: 0.5rem !important;
  }
</style>