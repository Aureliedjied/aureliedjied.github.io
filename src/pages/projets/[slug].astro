---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// 1. Génère un chemin pour chaque projet
export async function getStaticPaths() {
  const projects = await getCollection('projets');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

// 2. Récupère les données du projet
const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout>
  <article class="max-w-none">
    <header class="mb-10">
      <a href="/projets" class="text-sm text-gray-500 hover:text-white transition-colors flex items-center gap-2 mb-8">
        ← Retour aux projets
      </a>
      
      <h1 class="text-4xl font-bold mb-4 text-white">{project.data.title}</h1>
      
      <div class="flex gap-3">
        {project.data.tags.map(tag => (
          <span class="text-sm text-blue-400 font-mono">#{tag}</span>
        ))}
      </div>
    </header>

    <div class="text-gray-300 leading-relaxed space-y-4">
      <Content />
    </div>
  </article>
</Layout>