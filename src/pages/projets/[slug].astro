---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// 1. Génère un chemin pour chaque projet
export async function getStaticPaths() {
  const projects = await getCollection('projets');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

// 2. Récupère les données du projet
const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout>
  <article class="max-w-none">
    <header class="mb-10">
      <a href="/projets" class="text-sm text-gray-500 hover:text-white transition-colors flex items-center gap-2 mb-8">
        ← Retour aux projets
      </a>
      
      <h1 class="text-4xl font-bold mb-4 text-white">{project.data.title}</h1>
      
        <div class="flex gap-3">
        {project.data.tags.map(tag => (
            <a 
            href={`/tags/${tag}`} 
            class="text-sm text-blue-400 font-mono hover:text-blue-300 transition-colors"
            >
            #{tag}
            </a>
        ))}
        </div>
    </header>

    <div class="prose-content">
      <Content />
    </div>
  </article>
</Layout>

<style is:global>
  /* On indique à Tailwind v4 où se trouvent ses définitions */
  @reference "../../styles/global.css";

  .prose-content h2 { 
    @apply text-2xl font-semibold text-white mt-8 mb-4; 
  }
  .prose-content p { 
    @apply mb-4 text-gray-300; 
  }
  .prose-content ul { 
    @apply list-disc list-inside mb-4 text-gray-300; 
  }
</style>