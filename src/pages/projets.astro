---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const projects = await getCollection('projets');
const sortedProjects = projects.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const filters = [
  { label: "Tout", tag: "all" },
  { label: "Windows", tag: "Windows Server" },
  { label: "Linux", tag: "Debian" },
  { label: "S√©curit√© & VPN", tag: "S√©curit√©" },
  { label: "Monitoring & Audit", tag: "Monitoring" },
  { label: "Virtualisation & Cloud", tag: "Virtualisation" },
  { label: "Support Client & Ticketing", tag: "Support" } 
];

// Dictionnaire des th√®mes visuels
const themeMap = {
  pfsense: { border: '#22c55e', bg: 'rgba(34, 197, 94, 0.1)', icon: 'üõ°Ô∏è' },
  windows: { border: '#00a4ef', bg: 'rgba(0, 164, 239, 0.1)', icon: 'ü™ü' },
  zabbix: { border: '#e0291e', bg: 'rgba(224, 41, 30, 0.1)', icon: 'üìä' },
  linux: { border: '#fdb900', bg: 'rgba(253, 185, 0, 0.1)', icon: 'üêß' },
  default: { border: '#a855f7', bg: 'rgba(168, 85, 247, 0.1)', icon: 'üìÅ' }
};
---

<Layout>
  <div class="space-y-8">
    <header class="space-y-4">
      <h1 class="text-4xl font-bold tracking-tighter" style="color: var(--text-title);">
        Mes Travaux
      </h1>
      <p class="max-w-2xl" style="color: var(--text-main);">
        Exploration de l'infrastructure IT : du d√©ploiement de serveurs Windows √† la s√©curisation d'environnements Linux.
      </p>
    </header>

    <div class="flex flex-wrap gap-3 py-4 border-y" style="border-color: var(--card-border);">
      {filters.map(filter => (
        <button 
          class="filter-btn px-4 py-1.5 rounded-full border text-xs font-medium transition-all [&.active]:bg-purple-500/10 [&.active]:border-purple-500 [&.active]:text-purple-500" 
          style="border-color: var(--card-border); color: var(--text-main);"
          data-filter={filter.tag}
          class:list={[{ 'active': filter.tag === 'all' }]} 
        >
          {filter.label}
        </button>
      ))}
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {sortedProjects.map((project) => {
          // On r√©cup√®re le th√®me selon la cat√©gorie, sinon default
          const theme = (project.data.category && themeMap[project.data.category]) 
              ? themeMap[project.data.category] 
              : themeMap.default;

          return (
            <a 
              href={`/projets/${project.slug}`} 
              class="project-card group relative flex flex-col justify-between p-6 min-h-[300px] rounded-[1.5rem] border shadow-2xl transition-all duration-300 hover:-translate-y-1"
              style={`background-color: var(--card-bg); border-color: ${theme.border}44;`}
              data-tags={`${project.data.tags.join(' ')} ${project.data.category || ''}`}
            >
            
            {/* Ic√¥ne flottante en haut √† droite */}
            <div class="absolute top-6 right-6 text-2xl opacity-20 group-hover:opacity-100 group-hover:scale-110 transition-all duration-300">
              {theme.icon}
            </div>

            <div class="space-y-4 relative z-10">
                <div class="flex flex-wrap gap-2">
                    {project.data.tags.map(tag => (
                        <span 
                          class="px-2 py-0.5 text-[9px] font-bold uppercase tracking-widest rounded-md border"
                          style={`background-color: ${theme.bg}; color: ${theme.border}; border-color: ${theme.border}33;`}
                        >
                            {tag}
                        </span>
                    ))}
                </div>
                
                <div class="space-y-2">
                    <h3 class="text-xl font-bold transition-colors leading-tight" style={`color: var(--text-title);`}>
                        {project.data.title}
                    </h3>
                    <p class="text-sm leading-relaxed line-clamp-4" style="color: var(--text-main);">
                        {project.data.description}
                    </p>
                </div>
            </div>

            <div class="flex justify-between items-center mt-6 relative z-10">
                <div class="flex flex-col gap-1">
                    <span class="text-[10px] font-mono opacity-50 uppercase tracking-tighter" style="color: var(--text-main);">
                      Publi√© en {new Date(project.data.pubDate).toLocaleDateString('fr-FR', {month: 'short', year: 'numeric'})}
                    </span>
                    
                    {project.data.updatedDate && (
                        <span class="text-[9px] font-bold text-purple-400 flex items-center gap-1">
                            <span class="relative flex h-1.5 w-1.5">
                                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-purple-400 opacity-75"></span>
                                <span class="relative inline-flex rounded-full h-1.5 w-1.5 bg-purple-500"></span>
                            </span>
                            MAJ {new Date(project.data.updatedDate).toLocaleDateString('fr-FR', {month: 'short', year: 'numeric'})}
                        </span>
                    )}
                </div>

                <div class="opacity-50 group-hover:opacity-100 transition-all" style={`color: ${theme.border};`}>
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"></line><polyline points="7 7 17 7 17 17"></polyline></svg>
                </div>
            </div>
            
            {/* Overlay de couleur au survol bas√© sur le th√®me */}
            <div 
              class="absolute inset-0 rounded-[1.5rem] opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"
              style={`background: linear-gradient(135deg, ${theme.bg} 0%, transparent 100%);`}
            ></div>
            </a>
          );
        })}
    </div>
  </div>
</Layout>


<script>
  const buttons = document.querySelectorAll('.filter-btn');
  const projectCards = document.querySelectorAll('.project-card');

  // --- 1. FONCTION DE FILTRAGE PRINCIPALE ---
  function filterProjects(filterValue: string) {
    projectCards.forEach(card => {
      const cardTags = card.getAttribute('data-tags') || '';
      const cardElement = card as HTMLElement;
      
      // On utilise includes() pour permettre des filtres partiels
      if (filterValue === 'all' || cardTags.toLowerCase().includes(filterValue.toLowerCase())) {
        cardElement.style.display = 'flex';
      } else {
        cardElement.style.display = 'none';
      }
    });

    // Mise √† jour visuelle des boutons
    buttons.forEach(btn => {
      const btnFilter = btn.getAttribute('data-filter') || 'all';
      if (btnFilter === filterValue) {
        btn.classList.add('active');
      } else {
        btn.classList.remove('active');
      }
    });
  }

  // --- 2. √âCOUTEURS DE CLIC SUR LES BOUTONS ---
  buttons.forEach(button => {
    button.addEventListener('click', () => {
      const filter = button.getAttribute('data-filter') || 'all';
      filterProjects(filter);
      
      // Optionnel : Nettoyer l'URL si on clique manuellement sur un filtre
      const url = new URL(window.location.href);
      url.searchParams.delete('filter');
      window.history.pushState({}, '', url);
    });
  });

  // --- 3. LOGIQUE AU CHARGEMENT (LECTURE URL) ---
  window.addEventListener('DOMContentLoaded', () => {
    const urlParams = new URLSearchParams(window.location.search);
    const filterParam = urlParams.get('filter');

    if (filterParam) {
      // On applique le filtre r√©cup√©r√© de l'URL
      filterProjects(filterParam);
    }
  });
</script>