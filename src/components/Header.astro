---
import ThemeIcon from './ThemeIcon.astro';
---

<header class="flex items-center justify-between py-6 border-b transition-colors duration-300" style="border-color: var(--card-border);">
  <a href="/" class="font-black tracking-tighter text-xl hover:text-purple-400 transition-colors" style="color: var(--text-title);">
    AD<span class="text-purple-500">.</span>
  </a>

  <nav class="flex items-center gap-2 md:gap-4">
    <ThemeIcon />

    <a href="/" class="nav-link px-4 py-2 rounded-full text-sm font-medium transition-all">
      Accueil
    </a>
    <a href="/projets" class="nav-link px-4 py-2 rounded-full text-sm font-medium transition-all">
      Projets
    </a>
    <a href="/contact" class="nav-link px-4 py-2 rounded-full text-sm font-medium transition-all">
      Contact
    </a>
    <a href="/presentation" class="nav-link px-4 py-2 rounded-full text-sm font-medium transition-all whitespace-nowrap">
      Qui suis-je
    </a>
    
    <a 
      href="/recherche" 
      class="search-btn ml-2 p-2 rounded-full border transition-all shadow-sm"
      aria-label="Rechercher"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.3-4.3"></path>
      </svg>
    </a>
  </nav>
</header>

<style is:global>
  /* --- Style des liens de navigation --- */
  .nav-link {
    color: var(--text-main);
  }

  .nav-link:hover {
    color: var(--text-title);
    background-color: var(--card-border); /* Utilise la couleur de bordure pour un fond subtil */
  }

  /* --- Style du bouton recherche --- */
  .search-btn {
    background-color: var(--card-bg);
    border-color: var(--card-border);
    color: var(--text-main);
  }

  .search-btn:hover {
    color: #facc15; /* Jaune au hover */
    border-color: rgba(250, 204, 21, 0.4);
    background-color: rgba(250, 204, 21, 0.05);
  }

  /* --- On peut supprimer les anciens styles .pagefind-custom car ils sont sur la page /recherche --- */
</style>