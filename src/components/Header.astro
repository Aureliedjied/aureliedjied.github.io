---
import ThemeIcon from './ThemeIcon.astro';
---

<header class="flex items-center justify-between py-6 border-b transition-colors duration-300" style="border-color: var(--card-border);">
  <a href="/" class="hidden sm:block font-black tracking-tighter text-xl hover:text-purple-400 transition-colors shrink-0" style="color: var(--text-title);">
    AD<span class="text-purple-500">.</span>
  </a>

  <nav class="flex items-center gap-1 sm:gap-4 w-full sm:w-auto justify-between sm:justify-end">
    <div class="flex items-center gap-1 md:gap-2">
      <ThemeIcon />

      <a href="/" class="nav-link px-2 sm:px-4 py-2 rounded-full text-xs sm:text-sm font-medium transition-all">
        Accueil
      </a>
      <a href="/projets" class="nav-link px-2 sm:px-4 py-2 rounded-full text-xs sm:text-sm font-medium transition-all">
        Projets
      </a>
      <a href="/contact" class="nav-link px-2 sm:px-4 py-2 rounded-full text-xs sm:text-sm font-medium transition-all">
        Contact
      </a>
      <a href="/presentation" class="nav-link px-2 sm:px-4 py-2 rounded-full text-xs sm:text-sm font-medium transition-all whitespace-nowrap">
        <span class="sm:hidden">Bio</span>
        <span class="hidden sm:inline">Qui suis-je</span>
      </a>
    </div>
    
    <a 
      href="/recherche" 
      class="search-btn p-2 rounded-full border transition-all shadow-sm shrink-0"
      aria-label="Rechercher"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.3-4.3"></path>
      </svg>
    </a>
  </nav>
</header>

<style is:global>
  .nav-link {
    color: var(--text-main);
  }

  .nav-link:hover {
    color: var(--text-title);
    background-color: var(--card-border);
  }

  .search-btn {
    background-color: var(--card-bg);
    border-color: var(--card-border);
    color: var(--text-main);
  }

  .search-btn:hover {
    color: #a855f7; /* Violet au lieu du jaune pour rester dans ton th√®me */
    border-color: rgba(168, 85, 247, 0.4);
    background-color: rgba(168, 85, 247, 0.05);
  }
</style>