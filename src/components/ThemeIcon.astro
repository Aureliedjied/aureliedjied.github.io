<button id="theme-toggle" class="p-2 rounded-full hover:bg-white/10 transition-colors border border-white/10" aria-label="Changer le thème">
  <svg id="sun" class="hidden" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-500"><circle cx="12" cy="12" r="4"></circle><path d="M12 2v2"></path><path d="M12 20v2"></path><path d="m4.93 4.93 1.41 1.41"></path><path d="m17.66 17.66 1.41 1.41"></path><path d="M2 12h2"></path><path d="M22 12h2"></path><path d="m6.34 17.66-1.41 1.41"></path><path d="m19.07 4.93-1.41 1.41"></path></svg>
  
  <svg id="moon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-purple-400"><path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"></path></svg>
</button>

<script is:inline>
  // Cette fonction gère l'initialisation et la mise à jour des icônes
  function setupTheme() {
    const theme = localStorage.getItem('theme') || 'dark';
    const isLight = theme === 'light';
    
    // Applique le thème au document
    document.documentElement.setAttribute('data-theme', theme);
    
    // Met à jour les icônes (on utilise querySelector car les IDs peuvent être dupliqués lors de transitions)
    const sunIcon = document.querySelector('#sun');
    const moonIcon = document.querySelector('#moon');
    
    if (sunIcon && moonIcon) {
        sunIcon.classList.toggle('hidden', !isLight);
        moonIcon.classList.toggle('hidden', isLight);
    }
  }

  // Initialisation au premier chargement
  setupTheme();

  // Gestion du clic
  document.getElementById('theme-toggle')?.addEventListener('click', () => {
    const currentTheme = document.documentElement.getAttribute('data-theme');
    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
    
    localStorage.setItem('theme', newTheme);
    setupTheme();
  });

  // on relance au changement de page
  document.addEventListener('astro:after-swap', setupTheme);
</script>