---
interface Step {
  label: string;
  href: string;
}

interface Props {
  steps: Step[];
  currentStepIndex: number;
  seriesTitle: string;
}

const { steps, currentStepIndex, seriesTitle } = Astro.props;
---

<nav class="my-8" aria-label="Progression du labo">
  <div class="mb-3 px-1">
    <h4 class="text-[10px] uppercase tracking-[0.2em] font-black opacity-40">{seriesTitle}</h4>
  </div>

  <div class="flex items-center gap-2 overflow-x-auto pb-2 no-scrollbar snap-x">
    {steps.map((step, index) => {
      const isCurrent = index === currentStepIndex;
      
      return (
        <a 
          href={step.href}
          class={`flex items-center gap-2 px-4 py-2 rounded-lg border transition-all duration-200 shrink-0 snap-start ${
            isCurrent 
              ? "bg-purple-600 border-purple-500 text-white shadow-md" 
              : "bg-[#1a1a1a] border-white/5 hover:border-purple-500/50 text-white/60 hover:text-white"
          }`}
        >
          <span class={`font-mono text-[10px] font-bold ${isCurrent ? "text-purple-200" : "opacity-40"}`}>
            {String(index + 1).padStart(2, '0')}
          </span>
          <span class="text-sm font-bold whitespace-nowrap">
            {step.label}
          </span>
        </a>
      )
    })}
  </div>
</nav>

<style>
  /* Cache la scrollbar mais permet le d√©filement */
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>