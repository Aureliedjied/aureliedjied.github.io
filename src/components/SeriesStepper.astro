---
interface Step {
  label: string;
  href: string;
}

interface Props {
  steps: Step[];
  currentStepIndex: number;
  seriesTitle: string;
}

const { steps, currentStepIndex, seriesTitle } = Astro.props;
---

<nav class="my-8" aria-label="Progression du labo">
  <div class="mb-3 px-1">
    <h4 class="text-[10px] uppercase tracking-[0.2em] font-black opacity-40 text-black dark:text-white">
      {seriesTitle}
    </h4>
  </div>

  <div class="grid grid-cols-2 gap-2 sm:flex sm:items-center sm:overflow-x-auto sm:pb-2 no-scrollbar sm:snap-x">
    {steps.map((step, index) => {
      const isCurrent = index === currentStepIndex;
      
      return (
        <a 
          href={step.href}
          class={`flex items-center gap-2 px-3 py-2 sm:px-4 rounded-lg border transition-all duration-300 shrink-0 sm:snap-start ${
            isCurrent 
              ? "bg-purple-600 border-purple-500 text-white shadow-md shadow-purple-500/20" 
              /* LIGHT MODE : Fond blanc, bordure fine grise, texte sombre
                 DARK MODE : Fond sombre #1a1a1a, bordure invisible, texte blanc cassÃ© 
              */
              : "bg-white dark:bg-[#1a1a1a] border-gray-200 dark:border-white/5 text-gray-800 dark:text-white/60 hover:border-purple-500 hover:text-purple-600 dark:hover:text-white"
          }`}
        >
          <span class={`font-mono text-[10px] font-bold ${
            isCurrent 
              ? "text-purple-200" 
              : "text-gray-300 dark:text-white/20"
          }`}>
            {String(index + 1).padStart(2, '0')}
          </span>
          <span class="text-[12px] sm:text-sm font-bold whitespace-nowrap overflow-hidden text-ellipsis">
            {step.label}
          </span>
        </a>
      )
    })}
  </div>
</nav>

<style>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>