---
interface Step {
  label: string;
  href: string;
}

interface Props {
  steps: Step[];
  currentStepIndex: number;
  seriesTitle: string;
}

const { steps, currentStepIndex, seriesTitle } = Astro.props;
---

<nav class="my-10 w-full" aria-label="Progression du labo">
  <div class="mb-4 px-1 flex items-center gap-2">
    <div class="h-px w-8 bg-purple-600/30"></div>
    <h4 class="text-[10px] uppercase tracking-[0.2em] font-black text-slate-500 dark:text-white/40">
      {seriesTitle}
    </h4>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:flex lg:flex-wrap gap-3">
    {steps.map((step, index) => {
      const isCurrent = index === currentStepIndex;
      const isPast = index < currentStepIndex;

      return (
        <a 
          href={step.href}
          class={`group flex items-center gap-4 px-4 py-3 rounded-xl border transition-all duration-300 ${
            isCurrent 
              ? "bg-purple-600 border-purple-500 text-white shadow-md shadow-purple-500/20 ring-2 ring-purple-500/10" 
              : isPast
                ? "bg-slate-50 dark:bg-white/5 border-slate-200 dark:border-white/10 text-slate-600 dark:text-white/50 hover:border-purple-400"
                : "bg-white dark:bg-[#1a1a1a] border-slate-200 dark:border-white/5 text-slate-400 dark:text-white/30 hover:border-purple-400"
          }`}
        >
          <span class={`flex-shrink-0 flex items-center justify-center w-6 h-6 rounded-md text-[10px] font-black font-mono border ${
            isCurrent 
              ? "bg-purple-700/50 border-white/20 text-white" 
              : "bg-slate-100 dark:bg-white/5 border-slate-200 dark:border-white/10 text-slate-400 dark:text-white/20"
          }`}>
            {String(index + 1).padStart(2, '0')}
          </span>

          <span class={`text-[13px] font-bold tracking-tight ${isCurrent ? "text-white" : "group-hover:text-purple-600 dark:group-hover:text-purple-400"}`}>
            {step.label}
          </span>
          
          {isCurrent && (
            <span class="ml-auto flex h-2 w-2 rounded-full bg-white animate-pulse"></span>
          )}
        </a>
      )
    })}
  </div>
</nav>

<style>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>